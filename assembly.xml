<!-- This is an assembly file used for all the sample plugins. -->

<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>plugin</id>
  <formats>
    <format>jar</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>target/i18n</directory>
      <outputDirectory>i18n</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>target</directory>
      <outputDirectory>web</outputDirectory>
      <includes>
        <include>plugin.js</include>
      </includes>
    </fileSet>
    
    <fileSet>
      <directory>target/lib</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    
    <fileSet>
      <directory>web</directory>
      <outputDirectory>/web</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <exclude>**.js</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  
  <files>
    <file>
      <source>target/build/${project.build.finalName}.jar</source>
      <outputDirectory>lib</outputDirectory>
    </file>
    <file>
      <source>plugin.xml</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>configuration-form.html</source>
    </file>
    <file>
      <source>LICENSE</source>
    </file>
  </files>

</assembly>